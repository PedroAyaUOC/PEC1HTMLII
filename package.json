    "@parcel/transformer-sass": "^2.2.0",
    "autoprefixer": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.2.0",
    "postcss-preset-env": "^7.3.1",
    "posthtml-include": "^1.7.2",
    "rimraf": "^3.0.2",
    "sharp": "^0.29.3",
    "stylelint": "^14.6.0",
